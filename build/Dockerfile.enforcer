ARG BASE_PREFIX
ARG BASE_IMAGE_TAG
FROM neuvector/${BASE_PREFIX}enforcer_base:${BASE_IMAGE_TAG}

COPY stage /

# Labels for redhat
ARG NV_TAG
LABEL name="enforcer" \
      vendor="NeuVector Inc." \
      version=${NV_TAG} \
      release=${NV_TAG} \
      neuvector.image="neuvector/enforcer" \
      neuvector.role="enforcer" \
	  neuvector.rev="git.xxxx"

ENTRYPOINT ["/usr/local/bin/monitor", "-r"]
